{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SNPN/bin/Debug/net7.0/SNPN.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": ".NET Core Remote Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false,
                "debuggerPath": "/root/vsdbg/vsdbg",
                "pipeArgs": [
                    "exec -i latest-chatty-uwp-push-notifications-dev"
                ]
            },
            "sourceFileMap": {
                "/dotnetapp": "${workspaceRoot}/src"
            },
            "justMyCode": true
        }
    ]
}